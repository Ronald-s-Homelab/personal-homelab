#!/usr/bin/env bash

set -euo pipefail

ALWAYS_UPDATE="${ALWAYS_UPDATE:-true}"

dlogin() {
  TEMP_DIR=$(mktemp -d)
  echo "op://cli/dockerhub/token/password" >${TEMP_DIR}/file.tpl
  op inject -i ${TEMP_DIR}/file.tpl -o ${TEMP_DIR}/dockerhub_token
  cat ${TEMP_DIR}/dockerhub_token | sudo docker login -u $1 --password-stdin
  rm -rf $TEMP_DIR
  unset TEMP_DIR
}

